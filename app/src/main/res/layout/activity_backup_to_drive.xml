<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imaginat.androidtodolist.BackupToDrive">



    <Button
        android:id="@+id/createFileOnDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE FILE"/>

    <Button
        android:id="@+id/FindFileOnDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND FILE"
        android:layout_below="@id/createFileOnDrive"/>

    <Button
        android:id="@+id/UpdateFileODrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WRITE TO FILE"
        android:layout_below="@id/FindFileOnDrive"/>
    <Button
        android:id="@+id/ReadFileODrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="READ FILE"
        android:layout_below="@id/UpdateFileODrive"/>
    <Button
        android:id="@+id/DeleteFileOnDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE FILE"
        android:layout_below="@id/ReadFileODrive"/>
</RelativeLayout>
