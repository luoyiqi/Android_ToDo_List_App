<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/theToDoList_Actions"
    tools:context="com.imaginat.androidtodolist.MainActivity">

    <!--<TextView-->
    <!--android:id="@+id/MainListTextView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="HELLO FROM TEXTVIEW"/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/theRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:layout_below="@id/testFragment">-->

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/addListOverlayView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/textlines">
        <ImageButton
            android:id="@+id/addListButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@android:drawable/ic_menu_add"/>
        <TextView
            android:id="@+id/addListEditText"
            android:layout_toRightOf="@id/addListButton"
            android:text="Add Stuff here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
    </RelativeLayout>
</RelativeLayout>
